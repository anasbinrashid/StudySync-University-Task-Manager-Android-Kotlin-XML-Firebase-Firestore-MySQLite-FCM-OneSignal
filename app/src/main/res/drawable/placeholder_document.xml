<!-- res/drawable/placeholder_document.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#EEEEEE" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Optional: center a document icon (requires document_icon drawable) -->
    <item android:drawable="@drawable/ic_document" android:gravity="center" />

</layer-list>
